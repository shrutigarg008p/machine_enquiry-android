<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_12sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/orders_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:fontFamily="@font/moderat_black"
                    android:text="order NO:1934343"
                    android:textAlignment="viewStart"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/orders_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"

                    android:fontFamily="@font/moderat_medium"
                    android:text="12-02-2022"
                    android:textAlignment="viewStart"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3">

                <TextView
                    android:id="@+id/orders_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/moderat_medium"
                    android:text="Delivered"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_green"
                    android:textSize="@dimen/_14ssp" />

            </RelativeLayout>


        </LinearLayout>

        <include layout="@layout/include_horizontal_view" />

        <TextView
            android:id="@+id/orders_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="0.6"
            android:fontFamily="@font/moderat_black"
            android:text="2 Items"
            android:textAlignment="viewStart"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/_14ssp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/order_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="fitXY"

                    app:riv_border_color="@color/light_grey"
                    app:riv_border_width="@dimen/_2sdp"
                    app:riv_corner_radius="@dimen/_6sdp"
                    app:riv_mutate_background="true"
                    app:riv_oval="false"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/orders_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:fontFamily="@font/moderat_black"
                    android:text="Jumbo Electrical"
                    android:textAlignment="viewStart"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/orders_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/moderat_medium"
                    android:text="Jumbo Electrical"
                    android:textAlignment="viewStart"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/orders_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/moderat_black"
                    android:text="AED 25.56"
                    android:textAlignment="viewStart"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/_14ssp" />


            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/include_horizontal_view" />

        <TextView
            android:id="@+id/orders_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="0.6"
            android:fontFamily="@font/moderat_black"
            android:text="Order Information"
            android:textAlignment="viewStart"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/_14ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.5"
                android:fontFamily="@font/moderat_medium"
                android:text="Shipping address"
                android:textAlignment="viewStart"

                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/orders_shipping_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.5"
                android:fontFamily="@font/moderat_medium"
                android:text="Shipping address"
                android:textAlignment="viewStart"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/_12ssp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.5"
                android:fontFamily="@font/moderat_medium"
                android:text="Delivery Method"
                android:textAlignment="viewStart"

                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/orders_delivery_method"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.5"
                android:fontFamily="@font/moderat_medium"
                android:text="FEDED 3 DAYS"
                android:textAlignment="viewStart"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/_12ssp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.5"
                android:fontFamily="@font/moderat_medium"
                android:text="Total Amount"
                android:textAlignment="viewStart"

                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/orders_total_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.5"
                android:fontFamily="@font/moderat_bold"
                android:text="$34.34"
                android:textAlignment="viewStart"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/_12ssp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="0.5"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/moderat_bold"
                    android:text="Rating"
                    android:textColor="@color/appDark"
                    android:textSize="@dimen/_14ssp"
                    tools:ignore="MissingConstraints" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="0.5"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/moderat_bold"
                    android:text="Add Review"
                    android:textColor="@color/appDark"
                    android:textSize="@dimen/_14ssp"
                    tools:ignore="MissingConstraints" />
            </RelativeLayout>

        </LinearLayout>

        <include
            android:id="@+id/rating"
            layout="@layout/include_u_shop_rating" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>